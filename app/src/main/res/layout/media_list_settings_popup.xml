<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/toolbar_black"
    android:orientation="vertical"
    android:padding="10sp">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/toolbar_white"
        android:popupBackground="@color/toolbar_black"
        android:id="@+id/media_list_settings_popup_spinner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            app:cornerRadius="45sp"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="1sp"
            android:backgroundTint="@color/toolbar_black"
            android:textColor="@android:color/darker_gray"
            android:text="@string/media_list_settings_popup_close_label"
            android:layout_weight="1"
            android:layout_marginHorizontal="10sp"
            android:id="@+id/media_list_settings_popup_apply"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            app:cornerRadius="45sp"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="1sp"
            android:backgroundTint="@color/toolbar_black"
            android:textColor="@android:color/darker_gray"
            android:text="@string/media_list_settings_popup_apply_label"
            android:layout_weight="1"
            android:layout_marginHorizontal="10sp"
            android:id="@+id/media_list_settings_popup_close"/>

    </LinearLayout>
    


</LinearLayout>